html
  height 100vh

  font-family "Lato", Arial, sans-serif
  font-size 16px

  +media-tablet()
    font-size 18px

  +media-desktop()
    font-size 20px

body
  height 100%
  margin 0

h1
  color color-brand-primary-light
  font-family "Kessel 105"
  font-size 30px
  font-weight bold
  text-transform none

  +media-tablet()
    font-size 36px

h3
  font-size 18px

  +media-tablet()
    font-size 20px

  +media-desktop()
    font-size 24px

p
  color color-type-primary
  font-family "Lato", Arial, sans-serif
  letter-spacing 1px
  font-weight 300

  +media-desktop()
    max-width 1000px

a
  display inline-block
  text-decoration none

strong
  font-weight bold

ol
  font-family "Lato", Arial, sans-serif

  h1
    margin 40px 0 0 5px !important
    padding-bottom 0 !important

li
  h1
    text-align start !important

  p
    margin-left 5px
