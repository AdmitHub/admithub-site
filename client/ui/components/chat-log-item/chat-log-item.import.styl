chat-bubble-avatar-margin = 15px

.ah-chat-log-item
  display flex
  min-height 36px
  margin 12px 0

  &.oli
    justify-content flex-end

    .ah-chat-bubble
      background-color color-background-medium

      opacity 1

      p
        color color-type-secondary

  .ah-chat-bubble
    display flex
    align-items center
    max-width 240px
    padding 8px 30px
    border-radius 25px

    background-color color-brand-primary

    font-family Arial, sans-serif
    font-size 1rem
    letter-spacing 0.5px
    text-align start

    opacity 0.85

    p
      color color-type-light

    +media-tablet()
      max-width 350px

      p
        font-size 1rem

    +media-desktop()
      max-width 480px

      p
        font-size 1rem
