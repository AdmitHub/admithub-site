footer#ah-site-footer
  //position absolute
  display flex
  align-items center
  justify-content center

  background-color color-background-dark
  padding 30px 0 80px

  color color-type-light !important

  +media-tablet()
    padding 50px 30px 80px

  .footer-subsections
    display flex
    flex-direction column
    flex-wrap wrap
    justify-content center
    width 100%

    +media-desktop()
      flex-direction row

    .footer-subsection
      flex 1
      display flex
      flex-direction column
      min-width 320px
      margin 20px 0
      text-align center

      .ah-footer-line
        font-family "Lato", Arial, sans-serif
        font-size 20px
        line-height 36px

    .subsection-name
      @extend h1

      margin-bottom 15px

      font-size 24px
      letter-spacing 1px
      text-transform uppercase

  .ah-logo
    height 75px
    width @height
    margin 10px

    +media-tablet()
      margin 20px

  .ah-footer-links
    display flex
    flex-direction column
    align-items center

    color color-type-light

  .ah-footer-line
    color color-type-light !important

  .ah-footer-links-site
    display flex
    flex-direction column
    flex-wrap wrap
    justify-content center

    .ah-footer-line
      padding 1px
      margin 5px 10px
      border-bottom 2px solid color-type-light

      color color-type-light
      font-size 14px
      line-height @font-size + 6px
      text-transform uppercase

  .ah-footer-links-social
    display flex
    margin 20px 8px 30px

    a
      display inline-flex
      align-items center
      justify-content center
      width 60px
      height @width
      margin auto 8px
      border-radius 50%

      background-color #3A5475
      color color-type-light

  .ah-footer-links-company
    margin 10px 8px 20px

    .ah-footer-line
      margin auto 6px

      font-size 9px
      text-transform uppercase
      border-bottom 1px solid color-type-light

  .ah-footer-copyright
    color color-type-light
    font-size .8em





