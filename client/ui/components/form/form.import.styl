form
  color color-type-light

  .input-field
    display flex
    flex-direction column
    margin 20px 0

    font-family "Lato", Arial, sans-serif

    input
      height 52px
      padding 0 15px
      border 3px solid color-border-medium

      color color-type-primary
      font-size 24px

      +media-desktop()
        height 64px
        font-size 28px

    label
      margin-bottom 4px

      color color-type-primary
      font-size 16px
      letter-spacing 0.5px
      text-align start

      +media-tablet()
        font-size 18px

      +media-desktop()
        font-size 20px
