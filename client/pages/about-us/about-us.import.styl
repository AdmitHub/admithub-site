#ah-about-us-page
  .ah-hero
    background url(images/admithub-team-mobile.jpg) no-repeat bottom center
    background-color rgba(70, 50, 5, .6)
    background-blend-mode multiply
    background-size cover

    +media-tablet()
      background url(images/admithub-team.jpg) no-repeat bottom center
      background-color rgba(70, 50, 5, .6)
      background-blend-mode multiply
      background-size cover

  #ah-section-team
    display flex
    flex-wrap wrap
    background-color color-background-light

    #ah-team-member-profiles
      display flex
      flex-wrap wrap
      justify-content center

      .ah-team-member-profile
        margin 25px 20px

  #ah-section-steppingstone
    background-color white

    h1
      margin-bottom 20px

    .ah-video-frame
      border 1px solid color-brand-primary
      width 100%
      max-width 800px

      .responsive-video-wrapper
        height 0
        padding-top 25px
        padding-bottom 56.34% /* 16:9 ratio */
        margin-bottom 10px
        position relative
        overflow hidden

        &.vimeo
          padding-top 0

        iframe, video
          top 0
          left 0
          width 100%
          height 100%
          position absolute

.ah-team-member-profile
  display flex
  flex-direction column
  align-items center
  width 300px

  font-size 20px

  .ah-team-member-profile-image
    height 260px
    width @height
    border-radius 50%

    img
      height 100%
      width 100%
      border-radius 50%
      filter grayscale(100%)
      transition all 1s ease

      &:hover
        filter none
        transition all 1s ease

  .ah-team-member-profile-info
    position relative
    width 100%
    padding 15px 30px
    margin-top 30px

    color color-type-primary
    font-family "Lato", Arial, sans-serif

    .ah-team-member-profile-name
      @extend .ah-type-primary
      width 100%

      font-size 24px
      text-align center
      text-transform uppercase

    .ah-team-member-profile-title
      @extend .ah-type-primary
      width 100%

      font-size 20px
      text-align center
